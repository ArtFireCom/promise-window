{
  "private": true,
  "scripts": {
    "clean": "[ ! -e tests/coverage ] || rm -rf tests/coverage",
    "list": "find tests -maxdepth 1 -type f -name *.html | while read f; do basename \"$f\" .html; done | sed 's/^test-//'",
    "tdd": "./node_modules/karma/bin/karma start",
    "report": "istanbul report && cat tests/coverage/summary.txt && echo",
    "test": "npm run clean && for suite in $(npm run -s list); do SUITE=$suite CI=true npm run tdd || exit 1; done && npm run report"
  },
  "devDependencies": {
    "bower": "^1.3.12",
    "codeclimate-test-reporter": "0.0.4",
    "coveralls": "^2.11.2",
    "istanbul": "^0.3.5",
    "karma": "^0.12.31",
    "karma-chrome-launcher": "^0.1.7",
    "karma-coverage": "^0.2.7",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-qunit": "^0.1.4",
    "karma-sinon": "^1.0.4",
    "qunitjs": "^1.17.1",
    "sinon": "^1.12.2"
  }
}
